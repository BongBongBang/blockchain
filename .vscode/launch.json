    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'blockchain'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=blockchain",
                    "--package=blockchain"
                ],
                "filter": {
                    "name": "blockchain",
                    "kind": "bin"
                }
            },
            "args": [
                "create-chain",
                "--address",
                "aaron"
            ],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'blockchain'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=blockchain",
                    "--package=blockchain"
                ],
                "filter": {
                    "name": "blockchain",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ]
        }
    ]
}