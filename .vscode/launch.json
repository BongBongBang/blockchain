    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Send",
            "cargo": {
                "args": [
                    "build",
                    "--bin=blockchain",
                    "--package=blockchain"
                ],
                "filter": {
                    "name": "blockchain",
                    "kind": "bin"
                }
            },
            "args": [
                "send",
                "--from",
                "1Emz2Ddy7VhbU7gJ2vnzWpfTjFrL5hnCGf",
                "--to",
                "1QH7hF8apNN5noyHyfV4ZjDVTF3hNkzo4S",
                "--amount",
                "11"
            ],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "GetBalance",
            "cargo": {
                "args": [
                    "build",
                    "--bin=blockchain",
                    "--package=blockchain"
                ],
                "filter": {
                    "name": "blockchain",
                    "kind": "bin"
                }
            },
            "args": [
                "get-balance",
                "--address",
                "aaron",
            ],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'blockchain'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=blockchain",
                    "--package=blockchain"
                ],
                "filter": {
                    "name": "blockchain",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ]
        }
    ]
}